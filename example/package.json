{
  "name": "wetrial-module-template",
  "version": "0.0.1",
  "description": "wetrial module template",
  "main": "lib/index.js",
  "module": "dist/index.esm.js",
  "authors": {
    "name": "xiexingen",
    "email": "1002275364@qq.com"
  },
  "repository": "https://github.com/wetrial/Wetrial-Module-Template",
  "scripts": {
    "start": "concurrently \"yarn build\" \"yarn start:app\"",
    "start:app": "cross-env APP_ROOT=app APP_TYPE=site umi dev",
    "build": "father-build build --watch",
    "test": "umi test",
    "patch": "yarn version --patch && git push origin master && git push origin --tags",
    "minor": "yarn version --minor && git push origin master && git push origin --tags",
    "major": "yarn version --major && git push origin master && git push origin --tags",
    "lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src && yarn lint:style",
    "lint:js": "eslint --debug --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./",
    "lint:prettier": "check-prettier lint",
    "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
    "prettier": "prettier -c --write \"**/*\""
  },
  "peerDependencies": {
    "antd": "^3.26.4",
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@umijs/fabric": "^1.2.12",
    "babel-plugin-import": "^1.13.0",
    "check-prettier": "^1.0.3",
    "concurrently": "^5.0.2",
    "cross-env": "^6.0.3",
    "father-build": "^1.17.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.0",
    "typescript": "^3.7.4",
    "umi-types": "^0.5.9"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{tsx,ts,less,md,json}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx}": "npm run lint-staged:js"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "license": "MIT"
}
