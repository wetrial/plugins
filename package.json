{
  "name": "umi-plugin-module",
  "version": "0.0.2",
  "description": "pluginable module loader",
  "authors": {
    "name": "xiexingen",
    "email": "1002275364@qq.com"
  },
  "repository": "github.com/wetrial/umi-plugin-module",
  "peerDependencies": {
    "umi": "2.x || ^2.9.0-0"
  },
  "main": "lib/index.js",
  "scripts": {
    "start": "cross-env APP_ROOT=$PWD/example-app yarn start",
    "build": "father build",
    "test": "father test",
    "cov": "father test --coverage",
    "prepublishOnly": "npm run build && np --no-cleanup --yolo --no-publish",
    "patch": "yarn version --patch && git push origin master && git push origin --tags",
    "minor": "yarn version --minor && git push origin master && git push origin --tags",
    "major": "yarn version --major && git push origin master && git push origin --tags",
    "lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src && yarn lint:style",
    "lint:js": "eslint --debug --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./",
    "lint:prettier": "check-prettier lint",
    "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
    "prettier": "prettier -c --write \"**/*\""
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@wetrial/fabric": "^0.0.1",
    "assert": "^2.0.0",
    "babel-plugin-import": "^1.13.0",
    "check-prettier": "^1.0.3",
    "cross-env": "^6.0.3",
    "father": "^2.29.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "np": "^5.0.3",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.1",
    "umi": "^2.12.9",
    "umi-types": "^0.5.11"
  },
  "files": [
    "dist",
    "lib",
    "es",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{tsx,ts,less,md,json}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx}": "npm run lint-staged:js"
  },
  "license": "MIT"
}
